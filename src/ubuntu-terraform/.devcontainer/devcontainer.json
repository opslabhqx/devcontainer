{
  "name": "ubuntu-terraform",
  "build": {
      "dockerfile": "Dockerfile"
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "zsh"
        },
      "extensions": ["HashiCorp.terraform", "HashiCorp.HCL"]
      }
  },
  // "workspaceMount": "source=${localWorkspaceFolder}/,target=/home/default/ubuntu-terraform,type=bind,consistency=cached",
  // "workspaceFolder": "/home/default/ubuntu-terraform",
  "containerUser": "default",
  "remoteUser": "default",
  "updateRemoteUserUID": true,
  "privileged": false,
  // "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}
