// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/opslabhqx/devcontainer/tree/main/src/ubuntu-terraform
{
  "name": "ubuntu-terraform",
  "dockerComposeFile": [
    "./docker-compose.devcontainer.yml"
  ],
  "service": "ubuntu-terraform",
  "remoteUser": "vscode",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash" // default shell
      },
    "extensions": ["HashiCorp.terraform", "HashiCorp.HCL"]
    }
  },
  "workspaceFolder": "/home/vscode/ubuntu-terraform"
}
